<dashboard script="run_action.js" theme="dark">
  <label>Events</label>
  <description>This dashboard shows all events when the ingested data fullfil the requirements to be visible in the Smarthome datamodel.</description>
  <row>
    <panel>
      <html>
        <button class="btn btn-primary button1">Run search!</button>
      </html>
    </panel>
  </row>
  <fieldset submitButton="false">
    <input type="time" token="tokTime" searchWhenChanged="true">
      <label>Time range</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="text" token="tokVendorProduct" searchWhenChanged="true">
      <label>Vendor product</label>
      <default>*</default>
    </input>
    <input type="text" token="tokMessage" searchWhenChanged="true">
      <label>Message</label>
      <default>*</default>
    </input>
    <input type="text" token="tokSource" searchWhenChanged="true">
      <label>Data source</label>
      <default>*</default>
    </input>
    <input type="text" token="tokHost" searchWhenChanged="true">
      <label>Data source host</label>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Event history</title>
      <table>
        <search>
          <query>| from datamodel Smarthome
          | search vendor_product="*$tokVendorProduct$*" message="*$tokMessage$*" source="*$tokSource$*" host="*$tokHost$*"
| where NOT isnull(message)
| eval Timestamp = strftime(_time, "%F, %T")
| table Timestamp, message, value, log_level, vendor_product, plugin, source, host
| sort + Timestamp</query>
          <earliest>$tokTime.earliest$</earliest>
          <latest>$tokTime.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
</dashboard>